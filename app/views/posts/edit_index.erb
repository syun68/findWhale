<h1 class="post_top_title">投稿編集</h1>
<div class="sort_area">
  <%= link_to '投稿順でソートする', "/posts/#{@current_user.id}/index", class: "sort_button" %>
  <%= link_to '新着順でソートする', "/posts/#{@current_user.id}/index?sort_update=true", class: "sort_button" %>
</div>
<div class="container" id="post_index">
  <% @posts.each do |post| %>
    <div class="post_container">
      <div class="post_inner">
        <div class="post_form">
          <div class="post_title">タイトル</div>
            <%= post.title %>
        </div>
        <div class="post_form" id="post_image_form">
          <%= image_tag post.image, class:"post_image" %>
        </div>
        <div class="post_form">
          <div class="post_title">投稿日時</div>
            <%= post.created_at.strftime('%Y/%m/%d %H:%M') %>
        </div>
        <div class="post_form">
          <div class="post_title">発見場所</div>
            <%= post.place_prefecture %>
            <%= post.place_detail %>
        </div>
        <div class="post_form">
          <div class="post_title">状況詳細</div>
            <%= post.description %>
        </div>
        <div class="post_form" id="post_edit_link_container">
          <%= link_to "編集", edit_post_path(post_id: post.id) %>
          <%= link_to "削除", post, method: :delete, data: {confirm: "本当に削除しますか？"} %>
        </div>
      </div>
    </div>
  <% end %>
</div>
