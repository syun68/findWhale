<div class="container"id="post_index">
  <% @posts.each do |post| %>
  <div class="post_container">
    <div class="post_inner">
        <div class="post_form">
          <div class="post_title">タイトル</div>
          <%= post.title %>
        </div>
        <div class="post_form" id="post_image_form">
          <%= image_tag post.image, class:"post_image" %>
        </div>
        <div class="post_form">
          <div class="post_title">投稿日時</div>
          <%= post.created_at.strftime('%Y/%m/%d %H:%M') %>
        </div>
        <div class="post_form">
          <div class="post_title">発見場所</div>
          <%= post.place_prefecture %>
          <%= post.place_detail %>
        </div>
        <div class="post_form">
          <div class="post_title">状況詳細</div>
          <%= post.description %>
        </div>
        <div class="post_form">
          <%= link_to "地図で場所を確認する", maps_index_path(post_id: post.id) %>
        </div>
    </div>
  </div>
  <% end %>
  <script
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDaIRKv5ow7sW_VnXTsxlHxYb7LAJrFS68&langage=ja">
  </script>
</div>
