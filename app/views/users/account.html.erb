<div id="user_setting_container">
  <div class="sidebar">
    <ul>
      <li class="mark">
        <%= link_to "アカウント", :users_account %>
      </li>
      <li>
        <%= link_to "プロフィール", :users_profile %>
      </li>
    </ul>
  </div>
  <div class="main">
    <div class="user_setting_form">
      <h3 class="user_title">
        アカウント
      </h3>
      <div class="user_setting_form_inner">
        <div class="user_setting_form_row">
          <div class="user_setting_title_area">
            <div class="user_setting_title">メールアドレス</div>
          </div>
          <div class="user_setting_input_area">
            <%= @current_user.email %>
          </div>
        </div>
        <div class="user_setting_form_row">
          <div class="user_setting_title_area">
            <div class="user_setting_title">パスワード</div>
          </div>
          <div class="user_setting_input_area">
            ********
          </div>
        </div>
        <div class="user_setting_form_row">
          <div class="user_setting_title_area" style="position: relative; left: 30%;">
            <%= link_to "編集", edit_user_path(id: @current_user.id), class:"button", id:"user_setting_form_button", style:"margin-right: 10%;" %>
            <%= link_to "削除", @user, method: :delete, data: {confirm: "本当に削除しますか？"}, class:"button", id:"user_setting_form_button" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
